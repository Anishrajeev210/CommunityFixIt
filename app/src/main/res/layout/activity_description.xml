<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.apps.anish.googlemapsapi.DescriptionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:id="@+id/CommunityFixIT_id"
        android:layout_width="355dp"
        android:layout_height="37dp"
        android:text="                                               Description" />

    <EditText
        android:id="@+id/editddescription_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Describe the Problem" />

    <Button
        android:id="@+id/okbutton_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="submitDescription"
        android:text="Ok" />


</LinearLayout>
